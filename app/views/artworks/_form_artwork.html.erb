<div class="artwork-form">
  <%= form_for :artwork, url: url, method: method, multipart: true do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
    <div class="actions">
      <%= f.submit 'Submit' %>
    </div>
  <% end %>
</div>